{
  "name": "boilerplate_reactjs",
  "version": "1.0.0",
  "private": true,
  "license": "MIT",
  "author": "Ã‰verton Toffanetto",
  "description": "This application is a boilerplate for complex and large systems, especially those that need to scale with security and code quality.",
  "repository": "https://github.com/everton-dgn/react_webpack_styled_components_redux_tlk_boilerplate",
  "main": "./src/index.js",
  "scripts": {
    "dev": "env-cmd -f .env webpack-dev-server --progress --config webpack/webpack.local.js",
    "start": "env-cmd -f .env.prod webpack-dev-server --open --config webpack/webpack.prod.js",
    "build": "env-cmd -f .env.prod webpack --config webpack/webpack.prod.js",
    "build:dev": "env-cmd -f .env.dev webpack --config webpack/webpack.dev.js",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx,json} --max-warnings=0",
    "lint:css": "stylelint src/**/*.ts",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test": "jest --maxWorkers=50% --passWithNoTests",
    "test:w": "jest --watch --maxWorkers=25% --passWithNoTests",
    "test:coverage": "jest --maxWorkers=50% --passWithNoTests --coverage",
    "sb": "start-storybook -p 6006",
    "build-sb": "build-storybook",
    "generate": "yarn plop --plopfile componentGenerator/plopfile.js",
    "verify:update": "yarn upgrade-interactive --latest",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn typecheck && yarn test --findRelatedTests -b && yarn build && yarn build-sb"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint",
      "yarn lint:css"
    ]
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.7.2",
    "axios": "^0.27.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^8.0.1",
    "react-router-dom": "^6.3.0",
    "redux-persist": "^6.0.0",
    "styled-components": "^5.3.5"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.5.6",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "@storybook/react": "^6.4.22",
    "@stylelint/postcss-css-in-js": "^0.38.0",
    "@svgr/webpack": "^6.2.1",
    "@swc/core": "^1.2.182",
    "@swc/jest": "^0.2.21",
    "@testing-library/dom": "^8.13.0",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/react-hooks": "^8.0.0",
    "@testing-library/user-event": "^12.6.0",
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.33",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "@types/react-test-renderer": "^18.0.0",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "babel-loader": "^8.2.5",
    "babel-plugin-styled-components": "^2.0.7",
    "dotenv": "^16.0.1",
    "env-cmd": "^10.1.0",
    "eslint": "^8.15.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.2.1",
    "eslint-plugin-jest-dom": "^4.0.1",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "eslint-plugin-storybook": "^0.5.10",
    "eslint-plugin-testing-library": "^5.5.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "image-webpack-loader": "^8.1.0",
    "jest": "^28.1.0",
    "jest-environment-jsdom": "^28.1.0",
    "jest-styled-components": "^7.0.8",
    "jest-svg-transformer": "^1.0.0",
    "lint-staged": "^12.4.1",
    "plop": "^3.0.5",
    "postcss-syntax": "^0.36.2",
    "prettier": "^2.5.1",
    "react-refresh": "^0.13.0",
    "react-test-renderer": "^17.0.2",
    "serve": "^13.0.2",
    "source-map-loader": "^3.0.1",
    "storybook-addon-swc": "^1.1.7",
    "storybook-dark-mode": "^1.0.9",
    "storybook-mobile": "^1.0.0",
    "stylelint": "^14.8.2",
    "stylelint-config-recommended": "^7.0.0",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-config-styled-components": "^0.1.1",
    "stylelint-processor-styled-components": "^1.10.0",
    "swc-loader": "^0.2.0",
    "typescript": "^4.6.4",
    "webpack": "^5.72.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.9.0"
  },
  "resolutions": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2"
  }
}
